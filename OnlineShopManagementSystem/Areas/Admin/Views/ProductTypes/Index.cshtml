@using OnlineShopManagementSystem.Models
@model IEnumerable<ProductTypes>
@{
    ViewData["Title"] = "Index";
}

<br/>
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Product Types List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">New Product</a>
    </div>
</div>
<br/>
<div class="">
    <table class="table table-striped">
        <tr class="table-info">
            <th>@Html.DisplayNameFor(c=>c.ProductType)</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductType</td>
                <td>Edit | Details | Delete</td>
            </tr>
        }
    </table>
</div>

