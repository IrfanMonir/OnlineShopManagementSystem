@model OnlineShopManagementSystem.Models.Tag
@{
    ViewData["Title"] = "TagDetails";
}

<h2 class="text-info">Special Tag Details</h2>
<form asp-action="TagDetails" method="post">
    <div class="p-4 rounded border">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" readonly="readonly" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <a asp-action="TagEdit" asp asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <input type="submit" class="btn btn-success" value="Back to list" />
        </div>
    </div>
</form>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}






