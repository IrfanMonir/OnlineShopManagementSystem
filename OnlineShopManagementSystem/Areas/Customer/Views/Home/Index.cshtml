@using OnlineShopManagementSystem.Models
@model List<Product>

@{
    ViewData["Title"] = "Home Page";
}
<br/><br/>
<div class="row">
    @foreach(var products in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:23px; color:steelblue;">@products.Name</label>
                    </h4>
                </div>
                <img src="~/@products.Image" alt="Card-Image" class="card-img-top" style="height:300px;"/>
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:20px;color:#a51313"><b>Price:@products.Price</b></label>
                        </div>
                        <a asp-action="ProductDetails" asp-controller="Products" asp-route-id="@products.Id"class="btn btn-outline-success pull-right">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

