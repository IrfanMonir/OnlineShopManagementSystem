@using OnlineShopManagementSystem.Models
@model List<Product>
@{
    ViewData["Title"] = "Cart";
}
<style>
    .table thead th {
        vertical-align: bottom;
        border-bottom: 2px solid #dee2e6;
        line-height: 2.5rem;
    }
    .table td, .table th {
        padding: .35rem;
        vertical-align: top;
        border-top: 1px solid #dee2e6;
        text-align: center;
    }
</style>

<div class="col-lg-12">
    <div class="panel panel-card">
        <div class="panel-heading panel-heading-custom">
            <span class="panel-title">YOUR CART</span>
            <div class="pull-right" style="margin-top: -5px;">
                <a asp-action="Index" asp-controller="Home" class="btn btn-success">Bact To List</a>

            </div>
        </div>
        <br />
        <div class="panel-body">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr style="font-size: 15px;">
                        <th style="text-align:center!important;width:150px!important;">IMAGE</th>
                        <th style="text-align:center;width: 120px;">NAME</th>
                        <th style="text-align:center;width: 120px;">PRICE</th>
                        <th style="text-align:center;width: 120px;">PRODUCT TYPE</th>
                        <th style="text-align:center;width: 120px;">COLOUR</th>
                        <th style="text-align:center;width: 35px;">ACTION</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="font-size: 15px;">
                            <td style="width:150px!important;">
                                <img src="~/@item.Image" style="width:250px!important;height:150px!important;" />
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>@item.ProductTypes.ProductType</td>
                            <td>@item.ProductColor</td>
                            <td>
                                <a asp-area="Customer" asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger">
                                    <i class="fa fa-trash-o"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-12">
                    <h3>Total Amount:</h3>
                    <h3>Grant Total:@Model.Sum(c => c.Price)</h3>
                    <a asp-area="Customer" asp-action="CheckOut" asp-controller="Order" class="btn btn-info">Process To Checkout</a>
                    @*<a asp-action="Index" asp-controller="Home" class="btn btn-success pull-right">Bact To List</a>*@
                </div>
            </div>
        </div>
    </div>
</div>

